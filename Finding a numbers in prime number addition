#include<iostream.h>

#include<conio.h>

int prime(int a)

{

int i,g=0;

for(i=2;i<a;i++)

if(a%2==0)

g++;

if(g>0)

return(2);

else

return(1);

}

void main()

{

clrscr();

int a,i,j,f,s;

cout<<"Enter a positive integer:";

cin>>a;

for(i=0;i<a/2;i++)

for(j=0;j<a;j++)

if(i+j==a)

{

f=prime(i);

s=prime(j);

if((f==1)&&(s==1))

cout<<a<<"="<<i<<"+"<<j<<endl;

{

getch();

}
